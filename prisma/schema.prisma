generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model CopilotConversation {
  id        String            @id @default(uuid())
  projectId String
  userId    String
  createdAt DateTime          @default(now())
  messages  CopilotMessage[]
  proposals CopilotProposal[]
}

model CopilotMessage {
  id             String              @id @default(uuid())
  conversationId String
  role           String
  content        String
  createdAt      DateTime            @default(now())
  conversation   CopilotConversation @relation(fields: [conversationId], references: [id])
}

model CopilotProposal {
  id             String              @id @default(uuid())
  conversationId String
  projectId      String
  userId         String
  toolName       String
  toolArgs       String
  preview        String
  status         String              @default("pending")
  createdAt      DateTime            @default(now())
  confirmedAt    DateTime?
  lastResult     String?
  auditLogs      CopilotAuditLog[]
  conversation   CopilotConversation @relation(fields: [conversationId], references: [id])
}

model CopilotAuditLog {
  id         String          @id @default(uuid())
  proposalId String
  userId     String
  action     String
  payload    String?
  createdAt  DateTime        @default(now())
  proposal   CopilotProposal @relation(fields: [proposalId], references: [id])
}

model MaterialOrder {
  id        String              @id @default(uuid())
  projectId String
  userId    String
  vendor    String?
  date      DateTime            @default(now())
  status    String              @default("pending")
  notes     String?
  createdAt DateTime            @default(now())
  updatedAt DateTime            @updatedAt
  items     MaterialOrderItem[]
}

model MaterialOrderItem {
  id                String        @id @default(uuid())
  orderId           String
  description       String
  requestedQuantity Float
  receivedQuantity  Float         @default(0)
  unit              String?
  order             MaterialOrder @relation(fields: [orderId], references: [id])
}

model Document {
  id        String   @id @default(uuid())
  projectId String
  userId    String
  name      String
  type      String
  url       String
  category  String
  size      String
  createdAt DateTime @default(now())
}
