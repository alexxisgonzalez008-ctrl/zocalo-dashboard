generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model CopilotConversation {
  id        String            @id @default(uuid())
  projectId String
  userId    String
  createdAt DateTime          @default(now())
  messages  CopilotMessage[]
  proposals CopilotProposal[]
}

model CopilotMessage {
  id             String              @id @default(uuid())
  conversationId String
  role           String
  content        String
  createdAt      DateTime            @default(now())
  conversation   CopilotConversation @relation(fields: [conversationId], references: [id])
}

model CopilotProposal {
  id             String              @id @default(uuid())
  conversationId String
  projectId      String
  userId         String
  toolName       String
  toolArgs       String
  preview        String
  status         String              @default("pending")
  createdAt      DateTime            @default(now())
  confirmedAt    DateTime?
  lastResult     String?
  auditLogs      CopilotAuditLog[]
  conversation   CopilotConversation @relation(fields: [conversationId], references: [id])
}

model CopilotAuditLog {
  id         String          @id @default(uuid())
  proposalId String
  userId     String
  action     String
  payload    String?
  createdAt  DateTime        @default(now())
  proposal   CopilotProposal @relation(fields: [proposalId], references: [id])
}

model MaterialOrder {
  id        String              @id @default(uuid())
  projectId String
  userId    String
  vendor    String?
  date      DateTime            @default(now())
  status    String              @default("pending")
  notes     String?
  createdAt DateTime            @default(now())
  updatedAt DateTime            @updatedAt
  items     MaterialOrderItem[]
}

model MaterialOrderItem {
  id                String        @id @default(uuid())
  orderId           String
  description       String
  requestedQuantity Float
  receivedQuantity  Float         @default(0)
  unit              String?
  order             MaterialOrder @relation(fields: [orderId], references: [id])
}

model Task {
  id               String              @id @default(uuid())
  projectId        String
  userId           String
  category         String
  name             String
  start            DateTime
  end              DateTime
  days             Int
  status           String              @default("pending")
  priority         String              @default("medium")
  isMilestone      Boolean             @default(false)
  budget           Float?
  cost             Float?
  locked           Boolean             @default(false)
  durationWorkdays Int?
  createdAt        DateTime            @default(now())
  updatedAt        DateTime            @updatedAt
}

model DailyLog {
  id        String    @id @default(uuid())
  projectId String
  userId    String
  date      DateTime
  weather   String?
  notes     String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  expenses  Expense[]
}

model Expense {
  id          String    @id @default(uuid())
  projectId   String
  userId      String
  dailyLogId  String?
  category    String
  description String
  amount      Float
  date        DateTime  @default(now())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  dailyLog    DailyLog? @relation(fields: [dailyLogId], references: [id])
}

model Document {
  id        String   @id @default(uuid())
  projectId String
  userId    String
  name      String
  type      String
  url       String
  category  String
  size      String
  createdAt DateTime @default(now())
}
