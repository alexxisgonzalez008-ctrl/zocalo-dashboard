generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model CopilotConversation {
  id        String           @id @default(uuid())
  projectId String
  userId    String
  createdAt DateTime         @default(now())
  messages  CopilotMessage[]
  proposals CopilotProposal[]
}

model CopilotMessage {
  id             String              @id @default(uuid())
  conversationId String
  role           String
  content        String
  createdAt      DateTime            @default(now())
  conversation   CopilotConversation @relation(fields: [conversationId], references: [id])
}

model CopilotProposal {
  id             String              @id @default(uuid())
  conversationId String
  projectId      String
  userId         String
  toolName       String
  toolArgs       String
  preview        String
  status         String              @default("pending")
  createdAt      DateTime            @default(now())
  confirmedAt    DateTime?
  lastResult     String?
  conversation   CopilotConversation @relation(fields: [conversationId], references: [id])
  auditLogs      CopilotAuditLog[]
}

model CopilotAuditLog {
  id         String          @id @default(uuid())
  proposalId String
  userId     String
  action     String
  payload    String?
  createdAt  DateTime        @default(now())
  proposal   CopilotProposal @relation(fields: [proposalId], references: [id])
}
